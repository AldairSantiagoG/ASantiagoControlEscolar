<script>

    function SoloLetras(e, controlId) {
        var caracter = e.key;
        if (!/^[a-zA-Z\s]*$/g.test(caracter)) {
            $('#' + controlId).text("Solo se aceptan letras");
            $('#' + controlId).css({ "color": "red" });
            return false;
        }
        else {
            $('#' + controlId).text("");
            return true;
        }
    }//FIN SOLO LETRAS
</script>