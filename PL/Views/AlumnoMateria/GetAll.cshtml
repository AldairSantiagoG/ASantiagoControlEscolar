@model ML.Alumno
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<container>
    <div class="row">
        <div class="col-md-12">
            <h2>Alumnos</h2>
        </div>
    </div>
    
    <br />


    @if (Model.Alumnos.Count > 0)
    {
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-responsive">
                    <thead>
                        <tr class="text-center">
                            <td>Asignar</td>
                            <td class="hidden">IdAlumno</td>
                            <td>Nombre</td>
                            <td>Apellido Paterno</td>
                            <td>Apellido Materno</td>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ML.Alumno alumno in Model.Alumnos)
                        {
                        <tr class="text-center">
                            <td><a class="btn btn-primary" href="@Url.Action("MateriasGetAsignadas", "AlumnoMateria", new { IdAlumno = alumno.IdAlumno })">Asignar</a></td>
                            
                            <td class="hidden">@alumno.IdAlumno</td>
                            <td>@alumno.Nombre</td>
                            <td>@alumno.ApellidoPaterno</td>
                            <td>@alumno.ApellidoMaterno</td>

                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-danger" role="alert">
                    No se encontraron registros de alumnos
                </div>
            </div>
        </div>
    }


</container>


